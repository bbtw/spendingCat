{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Tests (pytest)",
      "type": "shell",
      "command": "pytest tests",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Lint (flake8)",
      "type": "shell",
      "command": "flake8 src tests",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Format (black)",
      "type": "shell",
      "command": "black src tests",
      "group": "build",
      "problemMatcher": []
    }
  ]
}